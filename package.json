{
  "name": "soloist",
  "version": "1.0.0",
  "description": "Yijunâ€™s",
  "type": "module",
  "scripts": {
    "build": "pnpm run build-rescript; pnpm run build-client; pnpm run build-static;",
    "start": "pnpm run build; pnpm run watch & pnpm run server",

    "build-client": "npx esbuild src/pages/Resume/Resume.client.bs.js --bundle --outfile=src/pages/Resume/Resume.client.js",
    "build-static": "esno src/build.bs.js",
    "build-rescript": "npx rescript",
    "server": "npx http-server public --port=8000",
    "watch": "npm-watch build"
  },
  "watch": {
    "build": {
      "patterns": ["src"],
      "extensions": "res, styl",
      "quiet": true,
      "runOnChangeOnly": true
    }
  },
  "author": "Chen Yijun",
  "engines": {
    "node": "17.x"
  },
  "bin": {
    "esno": "./esbuild/bin/esno.js"
  },
  "dependencies": {
    "@rescript/react": "^0.10.3",
    "@ryyppy/rescript-promise": "^2.1.0",
    "cheerio": "^1.0.0-rc.10",
    "commonmark": "^0.30.0",
    "date-fns": "^2.28.0",
    "esbuild": "^0.14.11",
    "esbuild-stylus-loader": "^0.4.1",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.0",
    "markdown-it": "^12.3.2",
    "normalize.css": "^8.0.1",
    "npm-watch": "^0.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "res-date-fns": "^1.1.2",
    "stylus": "^0.56.0",
    "styluslint": "^0.0.1-beta.3"
  },
  "devDependencies": {
    "gentype": "^4.3.0",
    "rescript": "^9.1.4"
  }
}
