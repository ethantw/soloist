$global-line-height = 1.2
$main-width = 20rem
$rwd-boundary = 450px

html
  &
    box-sizing border-box
    max-width 100vw
    overflow-x hidden
    font-family YuMincho, Source Han Serif K, Source Han Serif, Hiragino Mincho ProN, serif
    font-size 16px
    line-height 1.2
    color transparent !important
*
*::before
*::after
  box-sizing inherit
:lang(zh-Latn)
:lang(en)
  font-family Didot, serif
body
  margin 0
  padding 0
  min-height 100vh
  overflow-x inherit
  background-color #232323
  color #fff
h1
  margin 0
h2
  font-size 0
  line-height 0
  color transparent
a:link
a:visited
  color #1e481e
  text-decoration none
  transition all .15s ease-out
a:hover
  color lighten(#1e481e, 20%)
a:active
  color darken(#1e481e, 25%)

@keyframes xAxis-1
  50%
    animation-timing-function ease-out
    transform translateX(-40px)
@keyframes xAxis-2
  50%
    animation-timing-function ease-in
    transform translateX(-20px)

@keyframes yAxis-2
  50%
    animation-timing-function cubic-bezier(0.02, 0.01, 0.32, 0.73)
    transform translateY(-20px)
@keyframes yAxis-2
  50%
    animation-timing-function cubic-bezier(0.02, 0.01, 0.32, 0.73)
    transform translateY(20px)

article
  &
    display flex
    align-items stretch
    width 100vw
    height 100vh
    overflow hidden
  main
    flex 0 0 $main-width
    display flex
    flex-direction column
  ul
    list-style none

main
  &
    position relative
    z-index 10
    padding 2.5rem 0 4rem
    background-color #4eca59
    color #000
  h1
    &
      position relative
      margin 0 -.4em 0 0
      padding-bottom 1.5em
      width 100%
      height 1em
      box-sizing content-box
      font-size 1.5rem
      line-height 1
      writing-mode vertical-rl
      color #edfde2
      cursor default
    .family-name
      font-weight 600
    .given-name
      display block
      margin-right .4em
      font-weight 400
      line-height 1.8
    :lang(cmn-Latn)
      position absolute
      left -.125em
      bottom 0
      display block
      font-size 2.25rem
      font-family Didot, serif
      font-weight 400
      letter-spacing -.0125em
      writing-mode horizontal-tb
      color #000
  .contacts ul
    &
      margin .5rem 0 0
      padding 0
    a[href^=mailto]
      $color = #1e481e
      &
        margin-left .75rem
        padding-bottom 0
        font-family Avenir Next, Avenir, Helvetica Neue, sans-serif
        font-size 1.125rem
        border-bottom 3px solid transparent
        transition all .25s ease-out
        color $color
      &:hover
        border-bottom-color currentColor
      &:active
        color #000
    a[href*='\/\/yijun.me\/']
      &
        position absolute
        top .125rem
        display block
        width $main-width
        font-family DIN, sans-serif
        font-size 1.125rem
        font-style italic
        font-weight 200
        text-align end
      .protocol
        font-size .875rem
        color #ddffb5
      .domain
        color #fff

  .titles
    &
      margin auto 0 0
      ul
        &
          padding 0
        @media (min-width: $rwd-boundary)
          padding-left 100%
    li
      &
        position relative
        margin-bottom .5rem
        width fit-content
        height ($global-line-height)em
        line-height 1.2
        writing-mode vertical-rl
        color darken(#d5fbe8, 7%)
      @media not all and (min-width: $rwd-boundary)
        margin-left auto
      @media (min-width: $rwd-boundary)
        font-size 1.125rem
        color #d5fbe8
      > :lang(en)
        &
          letter-spacing .025em
          text-align end
          writing-mode horizontal-tb
          color #054826
        @media (min-width: $rwd-boundary)
          position absolute
          left 0
          top 0
          width 20rem
          transform translateX(-100%)

section.characters
  &
    position relative
    flex 1
    margin 0
    padding 0
    font-family Didot,
      YuMincho,
      Hiragino Mincho ProN,
      Source Han Serif K,
      Source Han Serif,
      serif
  li
    position absolute
    line-height 1
  [data-latn=chuo]
    &
      bottom 1rem
      left -.875rem
      font-size 9rem
      font-weight 500
      color rgba(#9dedba, .2)
    @media (min-width: $rwd-boundary)
      animation yAxis-1 30s infinite cubic-bezier(0.02, 0.01, 0.57, 0.36)
  [data-latn=shan]
    top -.675em
    right -.25em
    font-size 3rem
    color rgba(#9dedba, .2)
  [data-latn=min]
    top -1rem
    left 24rem
    font-size 3rem
    font-weight 200
    color rgba(#fff, .3)
  [data-name=open-quote]
    top 24rem
    right .875em
    font-size 4rem
    color rgba(#9dede2, .4)
  [data-latn=mi]
    &
      top 24rem
      right -.5em
      font-size 9rem
      transform scale(.75, 1.125)
      color rgba(#9dedba, .125)
    @media (min-width: $rwd-boundary)
      animation yAxis-1 50s infinite cubic-bezier(0.02, 0.01, 0.57, 0.36)
  [data-latn=zi]
    &
      top 12rem
      left 14rem
      font-size 4rem
      color rgba(#9dedba, .2)
    @media (min-width: $rwd-boundary)
      animation yAxis-2 10s infinite cubic-bezier(0.02, 0.01, 0.57, 0.36)
  [data-latn=ji]
    top 6.5rem
    left 9rem
    font-size 4rem
    color rgba(#9dedba, .425)
  [data-latn=ja]
    top 2.5rem
    left 13rem
    font-size 4rem
    color rgba(#9dedba, .125)
  [data-latn=chu]
    bottom -.75em
    right 8.125rem
    font-size 4rem
    font-family Source Han Sans
    font-weight 100
    color rgba(#9dedba, .2)
  [data-name=book-title-mark]
    top 2.5rem
    left 13rem
    margin-left 1em
    font-size 4rem
    color rgba(#76cbbf, .5)
  [data-name=comma]
  [data-name=secondary-comma]
  [data-name=period]
    top -5.5rem
    left 0
    font-size 18rem
    color rgba(#9dedba, .1)
  [data-name=secondary-comma]
    top -.5em
    left -.125em
    font-size 10rem
    color rgba(#9dedba, .05)
  [data-name=period]
    &
      top -11rem
      left .125em
      color rgba(#bbb, .1)
    @media (min-width: $rwd-boundary)
      animation xAxis-2 10s infinite cubic-bezier(0.02, 0.01, 0.57, 0.36)
  [data-name=close-quote]:lang(en)
    &
      top 12.5rem
      right 1.25rem
      font-size 4rem
      color rgba(#9dedba, .5)
    @media (min-width: $rwd-boundary)
      animation xAxis-1 20s infinite cubic-bezier(0.02, 0.01, 0.57, 0.36)

