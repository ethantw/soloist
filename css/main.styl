main
  &
    position relative
    z-index 10
    padding 2.5rem 0 4rem
    background-color #4eca59
    color #000
  h1
    &
      position relative
      margin 0 -.4em 0 0
      padding-bottom 1.5em
      width 100%
      height 1em
      box-sizing content-box
      font-size 1.5rem
      line-height 1
      writing-mode vertical-rl
      color #edfde2
      cursor default
    .family-name
      font-weight 600
    .given-name
      display block
      margin-right .4em
      font-weight 400
      line-height 1.8
    :lang(cmn-Latn)
      position absolute
      left -.125em
      bottom 0
      display block
      font-size 2.25rem
      font-family Didot, serif
      font-weight 400
      letter-spacing -.0125em
      writing-mode horizontal-tb
      color #000
  .contacts ul
    &
      margin .5rem 0 0
      padding 0
    a[href^=mailto]
      $color = #1e481e
      &
        margin-left .75rem
        padding-bottom 0
        font-family Avenir Next, Avenir, Helvetica Neue, sans-serif
        font-size 1.125rem
        border-bottom 3px solid transparent
        transition all .25s ease-out
        color $color
      &:hover
        border-bottom-color currentColor
      &:active
        color #000
    a[href*='\/\/yijun.me\/']
      &
        position absolute
        top .125rem
        display block
        width $main-width
        font-family DIN, sans-serif
        font-size 1.125rem
        font-style italic
        font-weight 200
        text-align end
      .protocol
        font-size .875rem
        color #ddffb5
      .domain
        color #fff

  .titles
    &
      margin auto 0 0
      ul
        &
          padding 0
        @media (min-width: $rwd-boundary)
          padding-left 100%
    li
      &
        position relative
        margin-bottom .5rem
        width fit-content
        height ($global-line-height)em
        line-height 1.2
        writing-mode vertical-rl
        color darken(#d5fbe8, 7%)
      @media not all and (min-width: $rwd-boundary)
        margin-left auto
      @media (min-width: $rwd-boundary)
        font-size 1.125rem
        color #d5fbe8
      > :lang(en)
        &
          letter-spacing .025em
          text-align end
          writing-mode horizontal-tb
          color #054826
        @media (min-width: $rwd-boundary)
          position absolute
          left 0
          top 0
          width 20rem
          transform translateX(-100%)
